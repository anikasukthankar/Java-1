package cw;

import java.util.Arrays;

public class FarewellToStrings {
	
	public static String pigLatin (String str) {
				
			return(str.substring(1)+str.substring(0, 1)+ "ay");	
			
	}
		
	public static void dollarSign(String str, char c) {
		
		for (int i = 0; i < str.length(); i++) {
			
			System.out.println(str.charAt(i) == c ? "$" : str.charAt(i));
				
		}		
		
	}
	
	public static void longestWord(String[] arr) {
		
		String l = "";
		
		for (int i = 0; i < arr.length; i++) {
			
			if (l.length() < arr[i].length()) {
				
				l = arr[i];
			}
		}
		
		System.out.println(l);
	        
	 }

	public static void main(String[] args) {
		
		System.out.println(pigLatin("pig"));
		
	}
	
}
