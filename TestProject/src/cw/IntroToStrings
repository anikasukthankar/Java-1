package cw;

public class IntroStrings{
	 
	public static void halfString(String s) {
		
		System.out.println(s.substring(s.length()/2));
		
	}
	
	
	public static void concat(String str1, String str2) {
		
		System.out.println(str1.substring(1) + str2.substring(1));
		
		
	}
	
	
	public static void contains (String str1, String str2) {
		
		System.out.println(str1.contains(str2));			
			
	}
	
	
	public static void adverb(String str) {
		
		System.out.println(str.substring(str.length()-2).equals("ly"));
		
		
	}
	
	public static void backwards(String str) {
		
		for (int i = str.length() - 1; i >= 0; i--) {
			
			System.out.print(str.charAt(i));
			
		}
		
		
	}
	
	public static void wordSquare(String str) {
		
		for (int i = 0; i< str.length(); i++) {
			
			System.out.println(str);
			
			str = str.substring(1)+ str.charAt(0);
			
		}
		
	}
	

	public static void main(String[] args) {
		
		//halfString("hi there");
		
		//concat("hello", "there");
		
		//contains("hippo", "po");
		
		//adverb("happily");
		
		//backwards("hello");
		
		wordSquare("hello");
		
	}

}
